# Environment variables for ScholarMind Backend
# Copy this file to .env and update the values

# Security - JWT Configuration (REQUIRED)
SECRET_KEY=your_secure_random_secret_key_here_minimum_32_characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://scholarmind_user:scholarmind_pass@db:5432/scholarmind_db

# Vector Database Configuration
VECTOR_DB_URL=http://vector_db:8000
CHROMA_HOST=vector_db
CHROMA_PORT=8000

# OpenAI API (required for embeddings and chat)
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith (optional - for LangChain tracing)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=scholarmind

# Application Settings
DEBUG=true
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=/app/uploads

# CORS Settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Instructions:
# 1. Generate a secure SECRET_KEY using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 2. Get your OpenAI API key from: https://platform.openai.com/api-keys
# 3. Set ENVIRONMENT=production for production deployments
